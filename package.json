{
  "name": "ts-micro-mediator",
  "version": "1.3.0",
  "description": "Edge-optimized Mediator Pattern for Cloudflare Workers, Node.js, Bun, and Deno with CQRS support",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "types": "./dist/index.d.ts"
    },
    "./lite": {
      "import": "./dist/lite.esm.js",
      "types": "./dist/lite.d.ts"
    },
    "./core": {
      "import": "./dist/core.esm.js",
      "types": "./dist/core.d.ts"
    },
    "./registry": {
      "import": "./dist/registry.esm.js",
      "types": "./dist/registry.d.ts"
    },
    "./middleware": {
      "import": "./dist/middleware.esm.js",
      "types": "./dist/middleware.d.ts"
    },
    "./advanced": {
      "import": "./dist/advanced.esm.js",
      "types": "./dist/advanced.d.ts"
    }
  },
  "sideEffects": false,
  "files": [
    "dist/*.esm.js",
    "dist/*.esm.min.js",
    "dist/*.d.ts",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "build:rollup": "rollup -c",
    "build:all": "npm run build && npm run build:rollup",
    "test": "node --test \"tests/**/*.test.mjs\"",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build:all",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "analyze": "npm run build:rollup"
  },
  "dependencies": {
    "ts-micro-result": "^2.1.10"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^24.7.0",
    "rimraf": "^6.0.1",
    "rollup": "^2.79.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-visualizer": "^6.0.5",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "mediator",
    "pattern",
    "cloudflare",
    "workers",
    "typescript",
    "optimized",
    "edge-computing",
    "microservices",
    "cqrs",
    "event-driven",
    "serverless",
    "bun",
    "deno",
    "nodejs"
  ],
  "author": "minhtaimc",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/minhtaimc/ts-micro-mediator.git"
  },
  "bugs": {
    "url": "https://github.com/minhtaimc/ts-micro-mediator/issues"
  },
  "homepage": "https://github.com/minhtaimc/ts-micro-mediator#readme",
  "engines": {
    "node": ">=18.0.0"
  }
}
